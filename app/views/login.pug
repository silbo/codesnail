doctype html
html.no-js(lang='en')
    head
        title CodeSnail | Learn Code While Competing

        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width')
        link(rel="shortcut icon", type="image/ico", href="/images/teacher.png")

        // base css styles
        link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap-responsive.min.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='/stylesheets/normalize/normalize.css')

        // flaty css styles
        link(rel='stylesheet', href='/stylesheets/style.min.css')
        link(rel='stylesheet', href='/stylesheets/responsive.css')

        // basic scripts
        script(src='/javascripts/modernizr/modernizr-2.6.2.min.js')
        script(src='/javascripts/jquery/jquery-1.11.2.min.js')
        script(type='text/javascript').
            $(function() {
                $('.goto-forgot').click(function() {
                    $('.login-wrapper > form:visible').fadeOut(500);
                });
                $('.goto-signup').click(function() {
                    $('.login-wrapper > form:visible').fadeOut(500);
                });
            });
    body.login-page
        //if lt IE 7
        p.chromeframe
            | You are using an
            strong outdated
            | browser. Please
            a(href='http://browsehappy.com/') upgrade your browser
            | or
            a(href='http://www.google.com/chromeframe/?redirect=true') activate Google Chrome Frame
            | to improve your experience.
        // BEGIN Main Content
        .login-wrapper
            h1(align='center') CodeSnail Login

            div#forErrors(align='center')
                each err in error
                    p.alert.alert-error #{err}
            if message != ""
                p.alert.alert-success #{message}

            // BEGIN Login Form
            form#form-login(name="login", action="/login", method="post")
                h3 Login to your account
                hr
                .control-group
                    .controls
                        input.input-block-level(name="username", type="text", placeholder="Username")
                .control-group
                    .controls
                        input.input-block-level(name="password", type="password", placeholder="Password")
                .control-group
                    .controls
                        button.btn.btn-primary.input-block-level(type="submit") Sign In
                hr
                p
                    | Login with
                    br
                    br
                    each login in logins
                        a(href=login[1]) #{login[0]} |
                hr
                p.clearfix
                    a.goto-forgot.pull-left(href='/forgot') Forgot Password?
                    a.goto-signup.pull-right(href='/signup') Sign up now
            // END Login Form
        // END Main Content
