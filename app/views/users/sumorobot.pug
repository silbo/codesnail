extends ../layouts/default

block head

    script(type='text/javascript', src='/js/sumorobot.js')
    script(type='text/javascript', src='/js/sumorobot-socket.js')
    script(type='text/javascript', src='/js/blockly/blockly_compressed.js')
    script(type='text/javascript', src='/js/blockly/javascript_compressed.js')
    script(type='text/javascript', src='/js/blockly/blocks_compressed.js')
    script(type='text/javascript', src='/js/blockly/msg/js/en.js')

block content

    .box-title
        h3 Sumorobot

    .box-content
        p RoboKoding project
            a(href="https://plus.google.com/photos/+SilverKuusik/albums/5777266184562058609")  gallery
            | ,
            a(href="https://www.facebook.com/pages/RoboKoding/685457641509474")  Facebook
            |  and
            a(href="https://github.com/robokoding")  GitHub
            | .
        p This is the
            a(href="https://developers.google.com/blockly/")  Blockly
            |  programming interface for sumorobots.
        div#video
            //img(src="http://localhost:8080/?action=stream")

        div#blocklyDiv(style="height: 260px;")

        div#buttons
            input(type="text", id="host" value="" placeholder="enter the Sumorobot's IP here" style="margin-bottom: 0px;")
            br
            input(type="button", class="btn btn-primary", value="Connect", onclick="javascript:connect();")
            input(type="button", class="btn btn-primary", value="Send Code", onclick="javascript:sendCode();")
            input(type="button", class="btn btn-primary", value="Show Code", onclick="javascript:showCode();")
